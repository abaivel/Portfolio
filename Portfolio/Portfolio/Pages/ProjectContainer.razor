@using MudBlazor
<MudPaper Elevation="5" Class="project-container px-5 py-3" Style="position: relative;">
	<MudText Typo="Typo.h4">@Project.Name</MudText>
	<MudText Typo="Typo.h6">@Project.Language</MudText>
	<MudItem Style="gap: 10px;display: flex;position: absolute;bottom: 12px;">
		@if (Project.GithubUrl != null)
		{
			<MudButton Href="@Project.GithubUrl"
					   Target="_blank"
					   Variant="Variant.Filled"
					   EndIcon="@Icons.Custom.Brands.GitHub"
					   Color="Color.Primary">
				GitHub
			</MudButton>
		}
		@if (Project.Url != null)
		{
			<MudButton Href="@Project.Url"
					   Target="_blank"
					   Variant="Variant.Filled"
					   EndIcon="@Icons.Material.Filled.Link"
					   Color="Color.Primary">
				Lien
			</MudButton>
		}
	</MudItem>
</MudPaper>
